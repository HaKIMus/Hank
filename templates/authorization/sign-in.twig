{% extends 'template.twig' %}

{% block body %}
    {% include 'components/navbar.twig' %}

    <main class="sign-in">
        <div class="container">
            <div class="row d-flex justify-content-center flex-wrap">
                {% if error %}
                    <div class="d-lg-flex alert alert-danger w-100" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form method="post" class="form-sign-in" action="{{ path('hank_sign_in') }}">
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Enter name" name="username" value="{{ last_username }}">
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        <input type="password" class="form-control" id="inputPassword" placeholder="Enter Password" name="password">
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button type="submit" class="btn btn-hank btn-block">Sign in</button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}